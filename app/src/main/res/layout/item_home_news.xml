<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/card_news_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_customer_picture"/>

        <TextView
            android:id="@+id/card_news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="News Title"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="18dp"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/card_news_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:textColor="#808080"
            style="@style/TextAppearance.AppCompat.Body1"
            android:text="Today"/>

        <TextView
            android:id="@+id/card_news_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="8dp"
            android:maxLines="4"
            style="@style/TextAppearance.AppCompat.Body1"
            android:text="is simply dummy text of the printing and typesetting industry.Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of typeand scrambled it to make a type specimen book."
            />


    </LinearLayout>

</android.support.v7.widget.CardView>